{
  "name": "ersims-dev",
  "version": "0.0.0",
  "private": true,
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{css,less,sass,scss,html,md,graphql,gql,json,ts,tsx,js,jsx,yml,yaml}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "apply:format": "prettier --write \"**/*.{css,less,sass,scss,html,md,graphql,gql,json,ts,tsx,js,jsx,yml,yaml}\"",
    "cdk": "cdk",
    "clean": "del-cli ./dist tsconfig.tsbuildinfo",
    "check:format": "prettier --list-different \"**/*.{css,less,sass,scss,html,md,graphql,gql,json,ts,tsx,js,jsx,yml,yaml}\"",
    "check:linting": "eslint \"*.{ts,js}?(x)\" \"{src,test,types}/**/*.{ts,js}?(x)\"",
    "check:types": "tsc --noEmit",
    "check": "npm-run-all check:*",
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview",
    "pretest": "npm run check",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "focus-visible": "^5.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/jest": "^27.5.0",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^16.11.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "del-cli": "^4.0.1",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.5",
    "husky": "^8.0.1",
    "jest": "27.5.0",
    "jest-axe": "^6.0.0",
    "jest-css-modules-transform": "^4.4.2",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "sass": "^1.52.0",
    "ts-jest": "^27.1.0",
    "typescript": "^4.7.2",
    "typescript-plugin-css-modules": "^3.4.0",
    "vite": "^2.9.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./{cdk,src,types,test}/**/!(__tests__)/!(*.test).{ts,js}?(x)"
    ],
    "coverageDirectory": ".coverage",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "moduleNameMapper": {
      "^(?!.+\\.module).+\\.(css|styl|less|sass|scss)$": "jest-transform-stub"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.ts"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/*.test.{ts,js}?(x)",
      "<rootDir>/src/**/__tests__/*.{ts,js}?(x)"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest",
      "^.+\\.module\\.(css|styl|less|sass|scss)$": "jest-css-modules-transform",
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|vtt|wav|mp3|m4a|aac|oga|ico|webmanifest|xml)$": "jest-transform-stub"
    },
    "silent": false,
    "verbose": true
  }
}
