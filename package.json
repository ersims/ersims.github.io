{
  "name": "ersims-dev",
  "version": "0.0.0",
  "private": true,
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{css,less,sass,scss,html,md,graphql,gql,json,ts,tsx,js,jsx,yml,yaml}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "apply:format": "prettier --write \"**/*.{css,less,sass,scss,html,md,graphql,gql,json,ts,tsx,js,jsx,yml,yaml}\"",
    "cdk": "cdk",
    "clean": "del-cli ./dist tsconfig.tsbuildinfo",
    "check:format": "prettier --list-different \"**/*.{css,less,sass,scss,html,md,graphql,gql,json,ts,tsx,js,jsx,yml,yaml}\"",
    "check:linting": "eslint \"*.{ts,js}?(x)\" \"{src,test,types}/**/*.{ts,js}?(x)\"",
    "check:types": "tsc --noEmit",
    "check": "npm-run-all check:*",
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview",
    "pretest": "npm run check",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "focus-visible": "^5.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^4.0.0",
    "@types/jest": "^26.0.23",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.7",
    "jest": "26.6.0",
    "jest-axe": "^5.0.1",
    "jest-css-modules-transform": "^4.3.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "sass": "^1.35.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.2",
    "typescript-plugin-css-modules": "^3.4.0",
    "vite": "^2.3.8"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./{cdk,src,types,test}/**/!(__tests__)/!(*.test).{ts,js}?(x)"
    ],
    "coverageDirectory": ".coverage",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "moduleNameMapper": {
      "^(?!.+\\.module).+\\.(css|styl|less|sass|scss)$": "jest-transform-stub"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.ts"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/*.test.{ts,js}?(x)",
      "<rootDir>/src/**/__tests__/*.{ts,js}?(x)"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest",
      "^.+\\.module\\.(css|styl|less|sass|scss)$": "jest-css-modules-transform",
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|vtt|wav|mp3|m4a|aac|oga|ico|webmanifest|xml)$": "jest-transform-stub"
    },
    "silent": false,
    "verbose": true
  }
}
